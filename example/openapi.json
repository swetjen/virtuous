{
  "openapi": "3.0.3",
  "info": {
    "title": "Virtuous API",
    "version": "0.0.1"
  },
  "paths": {
    "/api/v1/lookup/states/": {
      "get": {
        "summary": "List all states",
        "tags": [
          "states"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/main_StatesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/lookup/states/{code}": {
      "get": {
        "summary": "Get state by code",
        "tags": [
          "states"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/main_StateResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/secure/states/{code}": {
      "get": {
        "summary": "Get state by code (bearer token required)",
        "tags": [
          "states"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/main_StateResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "main_State": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "Two-letter state code."
          },
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Numeric state ID."
          },
          "name": {
            "type": "string",
            "description": "Display name for the state."
          }
        },
        "required": [
          "code",
          "id",
          "name"
        ]
      },
      "main_StateResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "state": {
            "$ref": "#/components/schemas/main_State"
          }
        },
        "required": [
          "state"
        ]
      },
      "main_StatesResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/main_State"
            }
          },
          "error": {
            "type": "string"
          }
        },
        "required": [
          "data"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "x-virtuousauth-prefix": "Bearer"
      }
    }
  }
}