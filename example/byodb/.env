# Template config. In real apps, avoid committing secrets.
PORT=8000
ADMIN_BEARER_TOKEN=dev-admin-token
CORS_ALLOW_ORIGINS=*

# Canonical app connection settings (used by Makefile + migrations)
PG_HOST=localhost
PG_PORT=5432
PG_DB=byodb
PG_USER=byodb
PG_PASS=byodb

# Admin credentials on the same PG host/port
PG_ADMIN_USER=postgres
PG_ADMIN_PASS=postgres

# Runtime app DSN (used by the API process)
DATABASE_URL=postgres://byodb:byodb@localhost:5432/byodb?sslmode=disable
